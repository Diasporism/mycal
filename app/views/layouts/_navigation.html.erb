<div class='row'>
  <div class='span1'>
    <%= link_to 'Home', root_path, :class => 'brand' %>
  </div>
  <div class='span3 offset8'>
    <% if current_user %>
      <%= link_to 'Create a Group', new_group_path, :class => 'brand' %>
      <%= link_to 'Log out', logout_path, :class => 'brand' %>
    <% else %>
      <%= link_to 'Sign up', signup_path, :class => 'brand' %>
      <%= link_to 'Log in', login_path, :class => 'brand' %>
    <% end %>
  </div>
</div>
